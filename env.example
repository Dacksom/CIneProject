# CinePay - Configuración de Variables de Entorno
# Copia este archivo como .env y configura tus valores

# =============================================================================
# CONFIGURACIÓN DE RAPIKOM
# =============================================================================

# API Key de Rapikom (obtener desde el dashboard de Rapikom)
RAPIKOM_API_KEY=sk_test_...

# Endpoint de la API de Rapikom
RAPIKOM_ENDPOINT=https://api.rapikom.com/v1

# ID del comercio en Rapikom
RAPIKOM_MERCHANT_ID=CINESUNIDOS_001

# Entorno de Rapikom (sandbox, staging, production)
RAPIKOM_ENVIRONMENT=sandbox

# =============================================================================
# CONFIGURACIÓN DE CINESUNIDOS
# =============================================================================

# API Key de CinesUnidos
CINESUNIDOS_API_KEY=your_cinesunidos_api_key

# Endpoint de la API de CinesUnidos
CINESUNIDOS_API=https://api.cinesunidos.com/v1

# ID del cine en CinesUnidos
CINEMA_ID=CINE_001

# Intervalo de sincronización con CinesUnidos (en milisegundos)
CINESUNIDOS_SYNC_INTERVAL=300000

# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================================================

# Entorno de la aplicación (development, staging, production)
NODE_ENV=development

# Puerto del servidor (si aplica)
PORT=3000

# URL base de la aplicación
BASE_URL=https://tu-dominio.com

# Zona horaria
TIMEZONE=America/Caracas

# Idioma por defecto
LANGUAGE=es

# Moneda por defecto
CURRENCY=USD

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# Host de la base de datos
DB_HOST=localhost

# Puerto de la base de datos
DB_PORT=5432

# Nombre de la base de datos
DB_NAME=cinepay

# Usuario de la base de datos
DB_USER=cinepay_user

# Contraseña de la base de datos
DB_PASSWORD=secure_password

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Clave secreta para JWT
JWT_SECRET=your_jwt_secret_key_here

# Tiempo de expiración de sesión (en milisegundos)
SESSION_TIMEOUT=1800000

# Número máximo de intentos de login
MAX_LOGIN_ATTEMPTS=5

# Longitud mínima de contraseña
PASSWORD_MIN_LENGTH=8

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =============================================================================

# Configuración de email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@cinepay.com
EMAIL_PASSWORD=your_email_password

# Configuración de SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configuración de Firebase (Push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# =============================================================================
# CONFIGURACIÓN DE LOGS
# =============================================================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Archivo de logs
LOG_FILE=logs/cinepay.log

# Tamaño máximo del archivo de log
LOG_MAX_SIZE=10m

# Número máximo de archivos de log
LOG_MAX_FILES=5

# =============================================================================
# CONFIGURACIÓN DE PAGOS
# =============================================================================

# Tasa de impuestos (IVA)
TAX_RATE=0.16

# Tarifa de servicio por transacción
SERVICE_FEE=0.50

# Monto máximo por transacción
MAX_TRANSACTION_AMOUNT=1000.00

# Monto mínimo por transacción
MIN_TRANSACTION_AMOUNT=1.00

# Métodos de pago soportados
SUPPORTED_PAYMENT_METHODS=credit_card,debit_card,mobile_payment

# =============================================================================
# CONFIGURACIÓN DE WEBHOOKS
# =============================================================================

# URL del webhook de Rapikom
RAPIKOM_WEBHOOK_URL=https://tu-dominio.com/webhook/rapikom

# Clave secreta del webhook
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# CONFIGURACIÓN DE CACHE
# =============================================================================

# URL de Redis (si aplica)
REDIS_URL=redis://localhost:6379

# Tiempo de expiración del cache (en segundos)
CACHE_TTL=3600

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# URL de Sentry para monitoreo de errores
SENTRY_DSN=your_sentry_dsn

# API Key de Google Analytics
GA_TRACKING_ID=your_ga_tracking_id

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Habilitar modo debug
DEBUG=false

# Habilitar logs detallados
VERBOSE_LOGGING=false

# Habilitar modo de mantenimiento
MAINTENANCE_MODE=false

# =============================================================================
# CONFIGURACIÓN DE TESTING
# =============================================================================

# Habilitar modo de testing
TESTING=false

# URL de la base de datos de testing
TEST_DB_URL=postgresql://test_user:test_password@localhost:5432/cinepay_test

# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================

# Habilitar compresión
ENABLE_COMPRESSION=true

# Habilitar cache de archivos estáticos
ENABLE_STATIC_CACHE=true

# Tiempo de expiración del cache de archivos estáticos (en segundos)
STATIC_CACHE_TTL=86400

# Habilitar rate limiting
ENABLE_RATE_LIMITING=true

# Número máximo de requests por minuto
RATE_LIMIT_MAX=100

# =============================================================================
# CONFIGURACIÓN DE BACKUP
# =============================================================================

# Habilitar backups automáticos
ENABLE_AUTO_BACKUP=true

# Frecuencia de backups (en horas)
BACKUP_INTERVAL=24

# Ruta de almacenamiento de backups
BACKUP_PATH=/backups/cinepay

# Retención de backups (en días)
BACKUP_RETENTION_DAYS=30
